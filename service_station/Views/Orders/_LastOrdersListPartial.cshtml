                <a href="@Url.Action("Add", "Orders", new {id = car.Id})" class="btn btn-warning btn-circle"><i class="glyphicon glyphicon-plus"></i></a>
                <br />
                @Html.Action("DeleteWithoutOrder", "Garage", new { id = car.Id })*@

        </div>
    </div>
    <hr />
}
<div class="row">
    <div class="col-xs-12">
        @if (Model.Count() != 0)
        {
            <a href="@Url.Action("Index", "Orders", new {id = Model.First().Car.CustomerId})">See all orders</a>
        }
        else
        {
            <p>This client doesn't have orders</p>
        }

    </div>

</div>
