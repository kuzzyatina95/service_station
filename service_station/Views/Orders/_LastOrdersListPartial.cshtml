@using Microsoft.Ajax.Utilities
@model IEnumerable<service_station.Models.Order>

@foreach (var order in Model)
            {
    <div class="row">
        <div class="col-xs-10">
            <div class="row">
                <div class="col-xs-7">
                    @Html.DisplayNameFor(model => model.Car.Make)/
                    @Html.DisplayNameFor(model => model.Car.Model):
                </div>
                <div class="col-xs-5 text-right">
                    @Html.DisplayFor(model => order.Car.Make)/
                    @Html.DisplayFor(model => order.Car.Model)
                </div>
            </div>
        
            <div class="row">
                <div class="col-xs-7">
                    @Html.DisplayNameFor(model => model.Date):
                </div>
                <div class="col-xs-5 text-right">
                    @Html.DisplayFor(model => order.Date)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-7">
                    @Html.DisplayNameFor(model => model.OrderAmount):
                </div>
                <div class="col-xs-5 text-right">
                    @Html.DisplayFor(model => order.OrderAmount)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-7">
                    @Html.DisplayNameFor(model => model.OrderStatus):
