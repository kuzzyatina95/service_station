@model service_station.Models.Customer

@{
    ViewBag.Title = "Personal";
}


<div class="body-content">
    <div class="container personal">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4 text-center">
                <h2>Personal information</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="col-xs-12 info">
                    <div class="col-xs-12 info-name">
                        <div class="row">
                            <div class="col-xs-8">
                                <h3 class="text-right">@Html.DisplayFor(model => model.LastName) @Html.DisplayFor(model => model.FirstName)</h3>
                            </div>
                            <div class="col-xs-4 text-right">
                                <a href="@Url.Action("Edit", "Customer", new {id = Model.Id})" class="btn btn-warning btn-circle"><i class="glyphicon glyphicon-pencil"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 info-content">
                        <div class="row">
                            <div class="col-xs-3">
                                @Html.DisplayNameFor(model => model.Email):
                            </div>
                            <div class="col-xs-9">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                @Html.DisplayNameFor(model => model.DateofBirth):
                            </div>
                            <div class="col-xs-9">
                                @Html.DisplayFor(model => model.DateofBirth)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                @Html.DisplayNameFor(model => model.Adress):
                            </div>
                            <div class="col-xs-9">
                                @Html.DisplayFor(model => model.Adress)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                @Html.DisplayNameFor(model => model.Phone):
                            </div>
                            <div class="col-xs-9">
                                @Html.DisplayFor(model => model.Phone)
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-xs-12 col-sm-6">
                <div class="col-xs-12 info">
                    <div class="col-xs-12 info-name">
                        <div class="row">
                            <div class="col-xs-7">
                                <h3 class="text-right">Last orders</h3>
                            </div>
                            <div class="col-xs-5 text-right">
                                <a href="@Url.Action("Create", "Orders", new {id = Model.Id})" class="btn btn-warning btn-circle"><i class="glyphicon glyphicon-plus"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 info-content">
                        @Html.Action("LastOrdersList", "Orders", new {id = Model.Id})
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="col-xs-12 info">
                    <div class="col-xs-12 info-name">
                        <div class="row">
                            <div class="col-xs-7">
                                <h3 class="text-right">Garage</h3>
                            </div>
                            <div class="col-xs-5 text-right">
                                <a href="@Url.Action("Add", "Garage", new {id = Model.Id})" class="btn btn-warning btn-circle"><i class="glyphicon glyphicon-plus"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 info-content">
                        @Html.Action("GarageList", "Garage", new {id = Model.Id})
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


